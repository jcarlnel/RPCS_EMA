<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rpcs.jacob.ema"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <service
        android:name="rpcs.jacob.ema.notifications.NotificationIntentService"
        android:enabled="true"
        android:exported="false" />

    <receiver android:name="rpcs.jacob.ema.broadcast_receivers.NotificationReceiver" />
    <receiver android:name="rpcs.jacob.ema.broadcast_receivers.NotificationServiceStarterReceiver" >
        <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
            <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            <action android:name="android.intent.action.TIME_SET" />
        </intent-filter>
    </receiver>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rpcs.jacob.ema.Activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rpcs.jacob.ema.Activity.SignupActivity"
            android:label="EMA" >
        </activity>
        <activity android:name="rpcs.jacob.ema.Activity.AccountHomeActivity" >
        </activity>
        <activity android:name="rpcs.jacob.ema.Activity.SurveyActivity" >
        </activity>
        <activity android:name="rpcs.jacob.ema.Activity.SurveyNotification" >
        </activity>
    </application>

</manifest>